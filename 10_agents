from langchain.tools import Tool
from langchain_openai import ChatOpenAI

# åˆ›å»ºå·¥å…·
def calculator(expression: str) -> str:
    """è®¡ç®—æ•°å­¦è¡¨è¾¾å¼"""
    try:
        return str(eval(expression))
    except:
        return "è®¡ç®—é”™è¯¯"

tools = [Tool(
    name="Calculator",
    func=calculator,
    description="ç”¨äºè®¡ç®—æ•°å­¦è¡¨è¾¾å¼"
)]

