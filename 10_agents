    def get_framework_info(self, framework_name: str) -> AgentFramework:
        """è·å–æ¡†æ¶ä¿¡æ¯"""
        return self.frameworks.get(framework_name.lower())
    
    def compare_frameworks(self) -> str:
        """æ¯”è¾ƒæ‰€æœ‰æ¡†æ¶"""
        comparison = "ğŸ“Š Agentæ¡†æ¶å¯¹æ¯”\n" + "="*50 + "\n\n"
        
        for name, framework in self.frameworks.items():
            comparison += f"ğŸ”¹ **{framework.name}**\n"
            comparison += f"   æè¿°: {framework.description}\n"
            comparison += f"   ä¼˜åŠ¿: {', '.join(framework.strengths[:2])}...\n"
            comparison += f"   é€‚ç”¨: {', '.join(framework.use_cases[:2])}...\n\n"
        
        return comparison
    
    def recommend_framework(self, use_case: str) -> str:
        """æ ¹æ®ä½¿ç”¨åœºæ™¯æ¨èæ¡†æ¶"""
        use_case = use_case.lower()
        
        recommendations = {
            "è½¯ä»¶å¼€å‘": "metagpt",
            "èŠå¤©æœºå™¨äºº": "langchain", 
            "ä»£ç ç”Ÿæˆ": "autogen",
            "å†…å®¹åˆ›ä½œ": "crewai",
            "å­¦ä¹ ç ”ç©¶": "custom"
        }
        
        for keyword, framework in recommendations.items():
            if keyword in use_case:
                framework_info = self.frameworks[framework]
                return f"æ¨èä½¿ç”¨ {framework_info.name}:\n{framework_info.description}"
        
        return "è¯·æä¾›æ›´å…·ä½“çš„ä½¿ç”¨åœºæ™¯ä»¥è·å¾—æ¨è"


def demo_framework_selection():
    """æ¼”ç¤ºæ¡†æ¶é€‰æ‹©"""
    print("ğŸ¯ Agentæ¡†æ¶é€‰æ‹©æŒ‡å—")
    print("="*50)
    
    comparison = FrameworkComparison()
    
    # æ˜¾ç¤ºæ‰€æœ‰æ¡†æ¶å¯¹æ¯”
    print(comparison.compare_frameworks())
    
    # åœºæ™¯æ¨è
    scenarios = [
        "æˆ‘æƒ³å¼€å‘ä¸€ä¸ªè‡ªåŠ¨åŒ–è½¯ä»¶å¼€å‘ç³»ç»Ÿ",
        "æˆ‘éœ€è¦åˆ›å»ºä¸€ä¸ªæ™ºèƒ½èŠå¤©æœºå™¨äºº",
        "æˆ‘æƒ³è®©å¤šä¸ªAIåä½œå†™ä»£ç ",
        "æˆ‘éœ€è¦ä¸€ä¸ªå†…å®¹åˆ›ä½œå›¢é˜Ÿ",
        "æˆ‘æƒ³å­¦ä¹ Agentå¼€å‘åŸç†"
    ]
    
    print("ğŸ’¡ ä½¿ç”¨åœºæ™¯æ¨è:")
    for scenario in scenarios:
        recommendation = comparison.recommend_framework(scenario)
        print(f"\nåœºæ™¯: {scenario}")
        print(f"æ¨è: {recommendation}")
    
    print("\n" + "="*50)
    print("é€‰æ‹©å»ºè®®:")
    print("â€¢ æ–°æ‰‹å­¦ä¹  â†’ è‡ªå®šä¹‰æ¡†æ¶æˆ–LangChain")
    print("â€¢ è½¯ä»¶å¼€å‘ â†’ MetaGPT")
    print("â€¢ å¤æ‚å¯¹è¯ â†’ AutoGen") 
    print("â€¢ å›¢é˜Ÿåä½œ â†’ CrewAI")
    print("â€¢ ç”Ÿäº§ç¯å¢ƒ â†’ LangChain")


